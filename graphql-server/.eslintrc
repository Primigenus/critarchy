{
  "extends": "airbnb",
  "parser": "babel-eslint",
  "env": {
    "browser": true
  },
  "rules": {
    "indent": [2, 2, { "SwitchCase": 1 }],
    "block-spacing": 2,
    "keyword-spacing": [2, { "overrides": {
      "if": { "after": false },
      "for": { "after": false },
      "while": { "after": false },
      "switch": { "after": false },
    }}],
    "react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx"] }],
    "react/jsx-curly-spacing": [2, "always"],
    "react/sort-comp": [1, {
      order: [
        "static-methods",
        "lifecycle",
        "everything-else",
        "/^on.+$/",
        "render",
        "/^render.+$/",
      ]
    }]
  }
}
